<div class="jumbotron jumbotron-fluid" style="background-image: url(https://az810058.vo.msecnd.net/site/global/Content/img/home-search-bg-05.jpg)">
  <div class="container">
    <h1 class="display-3">Create New Event</h1>
    <p class="lead">Start to create your next awesome event!!!</p>
  </div>
</div>

<div class="container">
  <%= form_for @event do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, @categories, :id, :name, {}, {:class => 'form-control' }%>
      </div>
      <div class="form-group">
        <%= f.label :starts_at %>
        <%= f.date_field :starts_at, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :ends_at %>
        <%= f.date_field :ends_at, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :venue_id %>
        <%= f.collection_select :venue_id, @venues, :id, :name, {}, {:class => 'form-control' }%>
      </div>
      <div class="form-group">
        <%= f.label :hero_image_url %>
        <%= f.text_field :hero_image_url, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :extended_html_description %>
        <%= f.text_area :extended_html_description, class: 'form-control' %>
      </div>
      <%= f.hidden_field :creator_id, value: current_user.id %>
      <%= f.submit 'Create', class: 'btn btn-secondary' %>
  <% end %>
</div>