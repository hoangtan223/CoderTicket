<!DOCTYPE html>
<html>
<head>
  <title>Coder Ticket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
  <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
  <ul class="nav navbar-nav">
    <% if is_logged_in? %>
        <li class="nav-item">
          <%= link_to "Hi, #{current_user.name}", users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Out', session_path(current_user.id), method: 'delete', class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create Event', new_event_path, class: 'nav-link' %>
        </li>
    <% else %>
        <li class="nav-item">
          <%= link_to 'Sign In', login_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_path, class: 'nav-link' %>
        </li>
    <% end %>
  </ul>
</nav>
<% if flash.any? %>
    <div style="margin-top: 54px;">
      <%= flash_messages %>
    </div>
<% end %>
<%= yield %>
</body>
</html>
