<div class="jumbotron jumbotron-fluid" style="background-image: url(https://az810058.vo.msecnd.net/site/global/Content/img/home-search-bg-05.jpg)">
  <div class="container">
    <h1 class="display-4">Create new ticket type</h1>
    <p class="lead"><%=	@event.name %></p>
  </div>
</div>

<div class="container">
  <%= form_for @type do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :max_quantity %>
        <%= f.text_field :max_quantity, class: 'form-control' %>
      </div>
      <%= f.hidden_field :event_id, :value => @event.id %>
      <%= f.submit 'Create', class: 'btn btn-success' %>
  <% end %>
</div>